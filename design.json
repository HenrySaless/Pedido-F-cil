{
  "designSystem": {
    "branding": {
      "name": "Modern Minimal UI",
      "theme": "Light mode with clean white backgrounds and vibrant accents"
    },
    "colors": {
      "primary": "#5F3FFF", // Violeta vibrante
      "accent": "#FF6435", // Laranja para destaques
      "background": "#FFFFFF", // Fundo branco
      "textPrimary": "#000000", // Preto puro para títulos
      "textSecondary": "#4F4F4F", // Cinza escuro para texto informativo
      "grayLight": "#F5F6FA", // Fundo de seções e contornos leves
      "chartColors": ["#56CCF2", "#2F80ED", "#6FCF97", "#F2C94C", "#BB6BD9"]
    },
    "typography": {
      "fontFamily": "'Inter', sans-serif",
      "headingLarge": {
        "fontSize": "40px",
        "fontWeight": "700",
        "lineHeight": "120%"
      },
      "headingMedium": {
        "fontSize": "24px",
        "fontWeight": "600"
      },
      "paragraph": {
        "fontSize": "16px",
        "fontWeight": "400"
      },
      "button": {
        "fontSize": "16px",
        "fontWeight": "500"
      }
    },
    "layout": {
      "maxWidth": "1200px",
      "padding": "32px",
      "gridSystem": {
        "columns": 12,
        "gutter": "24px"
      },
      "sectionSpacing": "96px"
    },
    "buttons": {
      "primary": {
        "background": "#5F3FFF",
        "color": "#FFFFFF",
        "borderRadius": "999px",
        "padding": "12px 24px",
        "hover": {
          "background": "#4B2FCC"
        }
      },
      "secondary": {
        "background": "#F2F2F2",
        "color": "#000000",
        "borderRadius": "8px"
      }
    },
    "components": {
      "navbar": {
        "position": "sticky",
        "height": "64px",
        "background": "#FFFFFF",
        "links": {
          "fontWeight": "500",
          "fontSize": "14px",
          "spacing": "24px"
        },
        "button": "primary"
      },
      "hero": {
        "layout": "twoColumn",
        "alignment": "left",
        "title": {
          "colorSequence": ["#5F3FFF", "#5F3FFF", "#5F3FFF"],
          "wordsPerLine": ["Your", "Your", "Your"]
        },
        "ctaButton": "primary",
        "subtext": "paragraph"
      },
      "charts": {
        "style": "flat",
        "tooltip": true,
        "roundedCorners": true,
        "chartTypes": ["bar", "pie"],
        "shadow": "subtle"
      },
      "cards": {
        "elevation": "light",
        "borderRadius": "16px",
        "padding": "24px",
        "background": "#FFFFFF",
        "shadow": "0 4px 12px rgba(0, 0, 0, 0.05)"
      },
      "footer": {
        "background": "#121212",
        "color": "#FFFFFF",
        "height": "auto",
        "padding": "40px 0"
      }
    },
    "images": {
      "style": "rounded",
      "shadow": "soft",
      "overlay": "minimal",
      "alignment": "right or center"
    },
    "icons": {
      "style": "line / minimal",
      "size": "16px to 24px",
      "color": "#5F3FFF"
    }
  }
}
